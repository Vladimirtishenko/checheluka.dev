.modal-window-cover
    position fixed
    height 100%
    width 100%
    top 0
    left 0
    text-align center
    z-index 1000
    font-size 0
    background rgba(46, 45, 45, 0.6)
    &:after
        content ""
        display inline-block
        height 100%
        vertical-align middle

.modal-window-outer
    display inline-block
    vertical-align middle
    width 100%

.modal-window
    max-width 570px
    background #fff
    position relative
    margin 0 auto
    max-height 100vh

.modal-window.modal-window__window-size-of
    max-width 700px

.modal-window__window-title
    font-family RobotoRegular, sans-serif
    color black
    font-size 16px

.modal-window__window-close
    position absolute
    top 18px
    right 19px

.modal-window__window-form-group
    padding 20px 40px

.modal-window__window-form-group .che-flexible
    justify-content center

.modal-window__window-form-group + .modal-window__window-form-group
    border-top 1px solid lgrey

.modal-window__window-form-group label
    font-family RobotoLight, sans-serif
    font-size 14px
    margin-right 24px
    font-weight 400

#modal-window__window-sing-in-input
    border 1px solid #9a9a9a
    width 260px
    max-width 65%
    display inline-block

.modal-window__window-sing-in-reminder
    width 220px
    max-width 70%
    text-align left
    font-family RobotoLight, sans-serif
    font-size 14px
    color #242424
    margin 25px auto 0
    position relative
    line-height normal
    padding 0 0 6px 6px

.modal-window__window-sing-in-reminder-icon
    position absolute
    top -4px
    left -23px
    font-size 21px

.modal-window__window-dialog-bubble
    padding 15px
    font-family RobotoLight, sans-serif
    font-size 12px
    color dgrey
    line-height normal
    text-align left

.modal-window__window-dialog-bubble + .modal-window__window-dialog-bubble
    margin-top 15px

.modal-window__window-dialog-bubble-user
    background #f1e8f0

.modal-window__window-dialog-bubble-admin
    background #e6e6e6

.modal-window__window-smiles-container
    justify-content flex-start
    margin-left -15px

.che-flexible.modal-window__window-smile
    margin-left 15px
    margin-bottom 15px
    padding 0

.modal-window__window-dialog-your-message
    text-align left

#modal-windows__window-dialog-textarea
    border 1px solid #9a9a9a

.modal-window__window-leave-feedback-input
    border 1px solid #9a9a9a
    width 260px
    max-width 65%
    display inline-block
    margin 5px 0

.modal-window__window-leave-feedback-label
    width 115px
    text-align left
    padding 10px 0
    font-family RobotoLight,sans-serif
    font-size 14px
    margin-right 24px

.modal-window__window-leave-feedback-radio-container
    width 260px
    max-width 65%
    margin 5px 0

.che-flexible.modal-window__window-leave-feedback-radio-container
    justify-content flex-start

.modal-window__window-leave-feedback-radio
    position absolute
    opacity 0
    clip rect(0, 0, 0, 0)

.modal-window__window-leave-feedback-radio+label
    padding 10px 0 10px 20px
    font-family RobotoLight, sans-serif
    font-size 12px
    color dgrey
    position relative
    cursor pointer
    margin-right 20px

.modal-window__window-leave-feedback-radio+label:before
    content ""
    display block
    width 15px
    height 15px
    border 1px solid #9a9a9a
    top 8px
    left 0
    position absolute

.modal-window__window-leave-feedback-radio:checked+label:before
    border-color #9a9a9a

.modal-window__window-leave-feedback-radio+label:after
    content ""
    display block
    width: 11px;
    height: 6px;
    border-left 1px solid reds
    border-bottom 1px solid reds
    top 11px
    left 2px
    position absolute
    transform rotate(-50deg)
    opacity 0

.modal-window__window-leave-feedback-radio:checked+label:after
    opacity 1

.modal-window__window-send-order-input
    border 1px solid #9a9a9a
    width 260px
    max-width 65%
    display inline-block
    margin 5px 0

.modal-window__window-send-order-label
    width 115px
    text-align left
    padding 10px 0
    font-family RobotoLight,sans-serif
    font-size 14px
    margin-right 24px

.modal-window__window-send-order-subtitle
    font-size 15px
    text-align left
    max-width 400px
    margin 20px auto 0
 
.modal-window-wrapper-table
    overflow auto    

.che-flash-flex
    display flex 
    align-items center
    justify-content center
    font-size 14px
    background transparent i

.che-flash-message
    background fblue
    padding 20px
    
.che-flash-message span
    color #fff
    font-family RobotoRegular
    text-transform uppercase
    
.che-flash-message a
    color #fff
    font-family RobotoRegular
    text-transform uppercase
    padding-bottom 2px
    font-size 14px
    border-bottom 1px solid #fff

.modal-window.modal-window__window-pop-up
    max-width 800px

.modal-window__window-pop-up
    padding 5px
    position relative
    display flex 
    justify-content space-between
    
.modal-window__state-image
    width 60%
    position relative
    z-index 1

.modal-window__state-image img
    width 100%
    
.modal-window__state-description
    width 40%
    padding 40px 20px 10px
    position relative
    float right
    text-align left
    
.modal-window__close
    width 22px 
    height 22px
    position absolute
    right 20px
    cursor pointer
    top 20px
    background url('../img/sprite_chechelyka.png') -279px -46px

.modal-window__pricing
    padding 25px
    background #2e2d2d
    text-align left
    
.modal-window__simple-text    
    color #fff 
    padding 0 
    margin 0
    font-family RobotoLight
    font-size 14px

.modal-window__simple-text-link
    font-size 14px
    padding-bottom 1px 
    border-bottom 1px solid rgba(255,255,255, .5)
    &:hover 
        border-bottom 1px solid transparent
    
.modal-window__simple-pricing
    padding 10px 0
    color #fff
    font-family RobotoRegular
    font-size 24px
    
.modal-window__title
    font-size 20px
    font-family RobotoRegular
    color #000
    padding 15px 0
    
.modal-window__controls
    position absolute
    top 50%
    margin-top -35px
    height 0
    left 0
    width 100%
    
.modal-window__controls-prev
    width 45px
    height 70px
    background-color rgba(255,255,255, .5)
    position absolute
    z-index 1
    left -45px
    cursor pointer
    &:before
        width 25px 
        height 40px
        position absolute
        content ""
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        background url('../img/sprite_chechelyka.png') -348px -46px

.modal-window__controls-next
    width 45px
    height 70px
    background-color rgba(255,255,255, .5)
    position absolute
    z-index 1
    right -45px
    cursor pointer
    &:before
        width 25px 
        height 40px
        position absolute
        content ""
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        background url('../img/sprite_chechelyka.png') -371px -46px

    