    font-size 14px

.catalog-blocks-container__block__opt b
    font-size 16px
    font-family Roboto
    font-weight 700

.catalog-blocks-container__block__opt b a
    text-transform uppercase
    text-decoration underline
    font-size 14px

.catalog-blocks-container__block__hover-container
    position absolute
    width 100%
    background rgba(51, 51, 51, 0.9)
    bottom 0
    left 0
    padding 15px
    color white
    justify-content space-between
    text-align center
    transform translateY(100%)
    transition transform 1s ease

.catalog-blocks-container__block:hover .catalog-blocks-container__block__hover-container
    transform translateY(0)

.catalog-blocks-container__block__hover-container .my_input_group
    width calc(50% - 6px)
    &:nth-child(odd)
        margin-right 6px
    &:nth-child(even)
