.catalog-sidebar__selected-categories__remove:hover:before,
.catalog-sidebar__selected-categories__remove:hover:after
    border-color reds

.catalog-blocks-container__block
    position relative
    overflow hidden
    max-width 263px
    margin 0 auto 30px

.catalog-blocks-container__block__wishlist
    position absolute
    top 10px
    right 10px
    width 35px
    height 31px
    border none
    background url(../img/button_wishlist.png)
    filter grayscale() brightness(265%)
    &:hover
        filter none

.catalog-blocks-container__block__bottom
    position absolute
    width 100%
    background rgba(51, 51, 51, 0.9)
    bottom 0
    left 0
    padding 15px
    color white
    justify-content space-between
    text-align center
    transition transform 1s ease

.catalog-blocks-container__block:hover .catalog-blocks-container__block__bottom
    transform translateY(100%)

.catalog-blocks-container__block__title
    width 100%
    text-transform uppercase
    margin-bottom 15px
    font-size
    font-family RobotoRegular

