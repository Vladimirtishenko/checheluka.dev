.catalog-sidebar__label-hover a
    font-family Roboto, sans-serif
    font-weight 700
    text-transform uppercase
    font-size 14px

.catalog-sidebar__item-hidden input[type="checkbox"]+label:hover .catalog-sidebar__label-hover
    display block
    
