.catalog-sidebar
    margin-bottom 30px

.catalog-sidebar__item
    padding 15px

.catalog-sidebar__item + .catalog-sidebar__item
    margin-top 1px

.catalog-sidebar__accordeon-fake
    position absolute
    opacity 0
    clip rect(0, 0, 0, 0)

.catalog-sidebar__item-hidden
    height 0
    display none
    margin-top 15px

.catalog-sidebar__accordeon-fake:checked + .catalog-sidebar__accordeon-img + .catalog-sidebar__item-hidden
    height auto
    display block

.catalog-sidebar__accordeon-img
    width 100%
    font-family RobotoLight
    color #000
    position relative
    cursor pointer
    font-weight 400
    &:after
        content ""
        position absolute
        display block
        width 9px
        height 9px
        border-left 1px solid dgrey
        border-bottom 1px solid dgrey
        right 3px
        top 3px
        transform rotate(-135deg)

.catalog-sidebar__accordeon-img:hover
    color reds

.catalog-sidebar__accordeon-fake:checked + .catalog-sidebar__accordeon-img:after
    transform rotate(-45deg)

.catalog-sidebar__accordeon-img span
    font-family RobotoLight, sans-serif
    color lgrey
    margin-left 5px

.catalog-sidebar__item-hidden input[type="checkbox"]
    position absolute
    opacity 0
    clip rect(0, 0, 0, 0)

.catalog-sidebar__item-hidden input[type="checkbox"]+label
    padding 0 0 0 20px
    font-family RobotoLight
    color dgrey
    position relative
    cursor pointer
    font-weight 400

.catalog-sidebar__item-hidden input[type="checkbox"]+label:hover
    color reds

.catalog-sidebar__item-hidden input[type="checkbox"]+label:before
    content ""
    display block
    width 15px
    height 15px
    border 1px solid lgrey
    top 0
    left 0
    position absolute

.catalog-sidebar__item-hidden input[type="checkbox"]:checked+label:before
    border-color #1aafec
    background #1aafec

.catalog-sidebar__item-hidden input[type="checkbox"]+label:after
    content ""
    display block
    width: 11px;
    height: 6px;
    border-left 1px solid #fff
    border-bottom 1px solid #fff
    top: 3px;
    left: 2px;
    position absolute
    transform rotate(-50deg)
    opacity 0

.catalog-sidebar__item-hidden input[type="checkbox"]:checked+label:after
    opacity 1

.catalog-sidebar__item-hidden input[type="checkbox"]+label .catalog-sidebar__label-suffix
    color lgrey

.catalog-sidebar__label-hover
    position fixed
    bottom 10px
    right 70px
    background fblue
    color #fff
    padding 15px
    white-space nowrap
    border-radius 0px
    z-index 10
