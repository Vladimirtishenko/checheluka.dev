.che-footer
	background dgrey
	min-height 100px

.che-footer__inner
	padding 40px 0
	
.che-footer__item
	position relative

.che-footer__item-link a
	display block
	padding 5px 0
	font-family RobotoLight
	
.che-footer__title
	color #fff 
	text-transform uppercase
	padding 0 0 0 40px
	font-size 12px
	font-family RobotoRegular
	position relative
	white-space nowrap
	&:before
		position absolute
		width 35px
		height 25px
		left 0
		top -6px
		background-image url('../img/sprite_chechelyka.png')
		content ""
	
.che-footer__item-link
	padding 15px 0 0 0

.che-footer__accordeon-fake
	display none
	
.che-footer__social a 
	width 45px
	height 45px
	display inline-block
	margin-right 4px
	background-image url('../img/sprite_chechelyka.png')
	&:last-child
		margin-right 0px

.che-footer__social-fb 
	background-position -50px 0
	&:hover
		background-position -50px -45px
	
.che-footer__social-ins 
	background-position -105px 0
	&:hover
		background-position -105px -45px
	
.che-footer__social-vk 
	background-position -160px 0
	&:hover
		background-position -160px -45px
	
.che-footer__social-o 
	background-position -215px 0
	&:hover
		background-position -215px -45px
	
@media (min-width: 768px) and (max-width: 991px)
	.che-footer__item-link
		height 0px
		overflow hidden
		padding 0
		
	.che-footer__item 
		padding 20px 0
		border-bottom 1px solid #666666
		&:first-child
			padding 0px 0 20px 0
		&:last-child
			padding 20px 0 0 0
			border-bottom 1px solid transparent
		&:first-child .che-footer__accordeon-img
			top 0
			
	.che-footer__title
		padding 0 40px 0 40px
			
	.che-footer__accordeon-fake
		display block
		opacity 0
		position absolute
	
	.che-footer__accordeon-img
		position absolute
		width 22px
		height 22px
		right 0
		top 16px
		background-image url('../img/sprite_chechelyka.png')
		content ""
		background-position 0px -58px
		cursor pointer
		
	.che-footer__accordeon-fake:checked + .che-footer__accordeon-img
		background-position 0px -27px
		
	.che-footer__accordeon-fake:checked + .che-footer__accordeon-img + .che-footer__item-link
		height auto
		padding-top 15px
		
	.che-footer__accordeon-fake:checked + .che-footer__accordeon-img + .che-footer__item-link:last-child 
		height auto
		padding-top 25px
		
