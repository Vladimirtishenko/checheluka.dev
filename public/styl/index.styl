.che-index__chapter-title
    font 28px/28px RobotoBold
    letter-spacing 6px
    text-align center
    text-transform uppercase
    margin-bottom 65px
    padding 0 25px
    @media (max-width: 991px)
        font-size 22px
        margin-bottom 45px
    @media (max-width: 800px)
        font-size 25px
        margin-bottom 50px
    @media (max-width: 480px)
        font-size 22px
        margin-bottom 40px
            
.che-index__popular-items
    display flex
    justify-content space-between
    @media (max-width: 991px)
        margin 0 25px
    @media (max-width: 800px)        
        flex-flow wrap
        justify-content center
    @media (max-width: 640px)        
        margin 0 0 0 27px

.che-index__popular-item
    width 31%
    background #fff
    padding 30px
    display flex
    flex-direction column
    color #000
    &:hover, &:focus
        color #000
        text-decoration none
    @media (max-width: 1366px)
        padding 25px
    @media (max-width: 1100px)
        padding 20px
    @media (max-width: 991px)
        padding 15px
        width 31.5%
    @media (max-width: 800px)
        padding 30px
        width 75%
        margin-bottom 50px
    @media (max-width: 640px)
        width 100%
    @media (max-width: 576px)
        padding 20px
    
.che-index__popular-img-part
    width 100%
    //height 575px
    //border-bottom 1px solid grey

.che-index__popular-img
    width 100%
    max-width 100%
    display inline-block

.che-index__popular-logo-part
    height 90px
    //outline 1px solid grey
    padding 10px 0
    display flex
    justify-content center
    align-items center
    @media (max-width: 1366px)
        height 80px
    @media (max-width: 1100px)
        height 60px
    @media (max-width: 991px)
        height 50px
    @media (max-width: 800px)
        height 90px
    @media (max-width: 480px)
        height 80px
                
.che-index__popular-logo
    max-width 65%
    max-height 100%

.che-index__popular-name-part
.che-index__bestsellers-text-part
    padding-top 5px
    text-transform uppercase
    text-align center
    font 14px/22px RobotoLight
    letter-spacing 2.8px
    @media (max-width: 1100px)
        font-size 12px
        letter-spacing 2px
    @media (max-width: 991px)
        font-size 11px
    @media (max-width: 991px)
        font-size 16px   
    @media (max-width: 480px)
        font-size 14px


//--bestsellers----------------------------------------
 .che-index__bestsellers-wrap
    padding 115px 0   
    @media (max-width: 1366px)
        padding 90px 0
    @media (max-width: 991px)
        padding 65px 0
    @media (max-width: 480px)
        padding 50px 0
                      
.che-index__bestsellers-inner
    width 83.8vw//1710px
    margin 0 auto
    //outline 1px solid green
    position relative
    @media (max-width: 840px)
        width 81vw
    @media (max-width: 640px)
        width 68vw
        
.che-index__bestsellers-carousel-wrap
    overflow hidden
    position relative

.che-index__bestsellers-carousel
    display flex
    width 10000px
        
.che-index__bestsellers-carousel-item/////////////////////////////////
    display inline-block
    margin-right 4.16vw
    
.carousel-item--big
    width 18.5vw//355px
    @media (max-width: 1366px)
        width 25vw
    @media (max-width: 840px)
        width 39.8vw
    @media (max-width: 640px)
        width 68vw
        
.carousel-item--small
    width 15.1vw//290px
    & .che-index__bestsellers-img-part
        padding-top 40px
    @media (max-width: 1366px)
        width 21.4vw
        & .che-index__bestsellers-img-part
            padding-top 35px
    @media (max-width: 1100px)
        & .che-index__bestsellers-img-part
            padding-top 25px
    @media (max-width: 840px)
        width 33vw
        & .che-index__bestsellers-img-part
            padding-top 35px
    @media (max-width: 640px)
        width 68vw
        & .che-index__bestsellers-img-part
            padding-top 0
        
.che-index__bestsellers-carousel-link
    display flex//block
    flex-direction column
    justify-content space-between
    color #000
    height 100%
    &:hover, &:focus
        color #000
        text-decoration none

.che-index__bestsellers-img
    width 100%
    max-width 100%

.che-index__bestsellers-text-part
    text-align left
    padding-top 15px
    @media (max-width: 640px)
        text-align center
        pading-top 30px
        align-self center
        background #fff
    
.che-index__bestsellers-brand
    font 18px/22px RobotoBold
    margin-bottom 15px

.che-index__bestsellers-redline
    width 110%
    height 3px
    background #ff0741
    position absolute
    bottom 57%
    transform translateX(-50%)
    left 50%
    @media (max-width: 991px)
        height 2px
        width 111%
    @media (max-width: 640px)
        bottom 30px
        
.arrow-left
.arrow-right
    display block
    position absolute
    top 50%
    width 30px
    height 30px
    border-top 3px solid #ff0741
    border-left 3px solid #ff0741
    cursor pointer
    @media (max-width: 991px)
        border-width 2px
        width 20px
        height 20px
    
.arrow-left
    left 2px
    transform translateY(-51%) rotate(-45deg)
    @media (max-width: 991px)
        left 3px
    
.arrow-right
    right 2px
    transform translateY(-51%) rotate(135deg)  
    @media (max-width: 991px)
        right 3px
    
