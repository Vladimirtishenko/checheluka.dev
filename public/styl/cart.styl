.cart
    padding 35px 0 25px

.cart-table-container
    background #efe7e7
    margin-top 42px

.cart-table-responsive-container
    margin-top -42px

.cart-table-responsive
    border none
    margin-bottom 0

.cart-table
    margin-bottom 0

.cart-table__row
.cart-table__header-row
    display flex
    align-items center
    justify-content space-between
    flex-wrap nowrap

.cart-table__row + .cart-table__row
    border-top 1px solid #fff

.cart-table__cell
    padding 20px 20px

.cart-table__header-cell
    padding 0 20px
    height 42px
    font-family RobotoLight, sans-serif
    font-size 14px
    color #242424
    white-space nowrap

.cart-product-remove-title
    padding-right 0

.cart-product-id-title
.cart-product-id
    padding-left 0
    width 8%

.cart-product-id
    font-family Roboto, sans-serif
    font-weight 500
    font-size 14px
    color #242424

.cart-product-image
.cart-product-image-title
    width 20%

.cart-product-info
.cart-product-info-title
    width 20%

.cart-product-info
    font-family Roboto, sans-serif
    font-weight 500
    font-size 14px
    color #242424

.cart-product-price
.cart-product-price-title
    width 14%

.cart-product-price
    font-family Roboto, sans-serif
    font-weight 700
    font-size 24px
    color #242424

.cart-product-count
.cart-product-count-title
    width 17%

.cart-product-count-input
    width 45px
    height 45px
    text-align center
    font-family Roboto, sans-serif
    font-weight 700
    border-radius 0
    font-size 18px
    background none
    color black
    border 1px solid #a7abc3
    padding 0

.cart-product-price-total
.cart-product-price-total-title
    width 14%

.cart-product-price-total
    font-family Roboto, sans-serif
    font-weight 700
    font-size 24px
    color #242424

.cart-product-remove
.cart-product-remove-title
    width 5%
    padding-right 0

@media screen and (max-width: 767px)
    .cart-table-responsive-container
        margin-left -15px
        margin-right -15px

    .cart-table-responsive
        padding 0 15px
        overflow auto

    .cart-table
        width 750px

.order-info
    background #2e2d2d
    color #fff
    padding 20px
    text-align center
    margin-bottom 10px

.order-info_title
    font-family RobotoLight, sans-serif
    font-size 14px

.order-info_value
    font-family Roboto, sans-serif
    font-weight 500
    font-size 24px

.cart-button-container
    justify-content flex-end
    margin-bottom 45px

.cart-button-container_button
    width 100%
    margin 10px 0

@media screen and (max-width: 767px)
    .cart-button-container_button
        max-width 220px
