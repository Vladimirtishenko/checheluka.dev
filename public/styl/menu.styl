.che-menu
    border-width 1px 0px 1px 0px
    border-style solid
    border-color lgrey

.che-menu__inner
    display flex
    align-items center
    justify-content space-between
    padding 10px 0
    position relative

.che-search
    display flex 
    align-items center
    justify-content space-between
    padding-right 0

.che-menu__list-inner
    padding 0

.che-menu__item
    display inline-block
    margin-right 20px
    &:last-child
        margin-right 0px

.che-menu__item a
    text-transform uppercase
    color #000
    font-family RobotoLight
    border-bottom 1px solid transparent
    padding-bottom 2px
    letter-spacing 1px
    font-size 14px
    &:hover
        border-bottom 1px solid lgrey


.che-search .form-control
    border 1px solid lgrey
    padding-right 20px
    
.che-search .che-bucket-container
    width 30px
    height 30px
    display block
    background url('../img/sprite_chechelyka.png')
    background-position -390px 2px

.che-search__form
    position relative
    width 80%

.che-search__input-ico
    width 27px
    height 24px
    background-image url('../img/sprite_chechelyka.png')
    position absolute
    right 5px
    top 10px
    background-position -274px 0
    cursor pointer

.che-menu__list-button-mobile
    display none
    background-image url('../img/sprite_chechelyka.png')
    background-position -311px 0px
    width 33px
    height 25px
    cursor pointer

.che-menu__mobile-hide
    opacity 0
    position absolute
    left -9999px

.che-active
    border-bottom 1px solid lgrey i
    padding-bottom 2px


@media (min-width: 768px) and (max-width:992px)
    .che-menu__item a
        font-size 13px
        
    .che-menu__item
        margin-right 10px

@media (max-width: 767px)
    .che-menu__list-button-mobile
        display block

    .che-menu__list
        display none

    .che-menu__list-inner
        margin 0 -15px
        padding 0 15px
        background #fff

    .che-menu__mobile-hide:checked + .che-menu__list-button-mobile
        background-position -359px 0px

    .che-menu__mobile-hide:checked + .che-menu__list-button-mobile + .che-menu__list
        display block
        position absolute
        width 100%
        top 101%
        z-index 1
        &:before
            width calc(100% + 30px)
            height 1px
            background lgrey
            position absolute
            bottom 0
            left -15px
            content ""

    .che-menu__item
        display block
        padding 15px 0
        &:last-child
            padding 15px 0 30px 0
        &:first-child
            padding 30px 0 15px 0
