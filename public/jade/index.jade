extends layout/layout.jade

block content
    .che-index__wrap
        img.che-index__wrap_bg(src="./public/img/index_bg_bottom.png")
        .che-index__inner
            .che-index__info-wrap
                .che-index__info-head 
                    p ООО "Чечелюка ПЛЮС" является официальным дилером и представителем в Российской Федерации торговых марок и брендов, представленных в нашем оптовом онлайн-магазине

                .che-index__info-inner

                    .che-index__info-item.che-index__info-item--tobottom
                        .che-index__info-textpart.text--top.text--1
                            p.che-index__info-text Доставка ДО транспортной компании БЕСПЛАТНАЯ

                        .che-index__info-imgpart.border--red.img--bottom    
                            img(src="./public/img/index_free_triangle.svg").che-index__info-img

                    .che-index__info-item
                        .che-index__info-imgpart.border--green.img--top                              
                            img(src="./public/img/index_tshirt_triangle.svg").che-index__info-img

                        .che-index__info-textpart.text--bottom.text--2                        
                            p.che-index__info-text Минимальный заказ - #[span.che-nowrap 5 любых единиц со всего сайта]

                    .che-index__info-item.che-index__info-item--tobottom
                        .che-index__info-textpart.text--top.text--3
                            p.che-index__info-text Моментальная отгрузка (1-3 дня)

                        .che-index__info-imgpart.border--yellow.img--bottom                                  
                            img(src="./public/img/index_delivery_triangle.svg").che-index__info-img

                    .che-index__info-item
                        .che-index__info-imgpart.border--orange.img--top                               
                            img(src="./public/img/index_card_triangle.svg").che-index__info-img

                        .che-index__info-textpart.text--bottom.text--4                           
                            p.che-index__info-text Возможность безналичного расчёта
                
                .che-index__info-text--mobile
                    p.che-index__info-item--mobile.che-index__info-item--mobile-1 Доставка ДО транспортной компании БЕСПЛАТНАЯ
                    p.che-index__info-item--mobile.che-index__info-item--mobile-2 Минимальный заказ - #[span.che-bold 5] любых единиц со всего сайта
                    p.che-index__info-item--mobile.che-index__info-item--mobile-3 Моментальная отгрузка (1-3 дня)
                    p.che-index__info-item--mobile.che-index__info-item--mobile-4 Возможность безналичного расчёта

